{{!
    Renders a bootstrap-panel
    @public
    @param {string} hasTitle
    @partial #*title renders the title
    @param {string} panelId
    @param {string} panelType
    @readonly
}}
<div {{#if panelId}}id="{{panelId}}"{{/if}} class="panel panel-{{panelType}}">
    {{#if hasTitle}}
        <div class="panel-heading">
            <h3 class="panel-title">
                {{> title}}
            </h3>
        </div>
    {{/if}}
    <div class="panel-body">
        {{> @partial-block}}
    </div>
</div>