{{!
    Renders a bootstrap-panel
    @public
    @param {string} type
    @readonly
}}
<div {{#if title}}id="{{panelType}}-{{htmlId title}}"{{/if}} class="panel panel-{{panelType}}">
    {{#if title}}
        <div class="panel-heading">
            <h3 class="panel-title">
                {{panelTitle}}
            </h3>
        </div>
    {{/if}}
    <div class="panel-body">
        {{> @partial-block}}
    </div>
</div>