{{!
    Renders a bootstrap-panel
    @public
    @readonly
}}
<div {{#if title}}id="definition-{{htmlId title}}"{{/if}} class="panel panel-definition">
    {{#if title}}
        <div class="panel-heading">

            <h3 class="panel-title">
                {{#if anchor}}<a name="/definitions/{{title}}"></a>{{/if}}
                {{title}}
            </h3>
        </div>
    {{/if}}
    <div class="panel-body">
        {{> @partial-block}}
    </div>
</div>